@model Celsia.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                <div class="d-flex justify-content-center py-4">
                    <a asp-controller="Account" asp-action="Login" class="logo d-flex align-items-center w-auto">
                        <img src="https://expoindustrial.com.co/wp-content/uploads/2024/04/LOGO-CELSIA.png" alt="logo">
                    </a>
                </div>

                <div class="card mb-3 px-3">

                    <div class="card-body">

                        <div class="pt-4 pb-2">
                            <h5 class="card-title text-center text-black pb-0 fs-4">Crea una cuenta</h5>
                        </div>

                        <form class="row g-3 needs-validation" novalidate asp-action="Register" method="post">

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-123"></i></span>
                                    <input type="text" name="Id" class="form-control" id="Id" asp-for="Id" placeholder="Identificador" required>
                                    <div class="invalid-feedback">Por favor ingresa tu identificador.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="ri-account-circle-line"></i></span>
                                    <input type="text" name="Name" class="form-control" id="Name" asp-for="Name" placeholder="Nombre" required>
                                    <div class="invalid-feedback">Por favor ingresa tu nombre.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="ri-map-pin-line"></i></span>
                                    <input type="text" name="Address" class="form-control" id="Address" asp-for="Address" placeholder="Dirección" required>
                                    <div class="invalid-feedback">Por favor ingresa tu dirección.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="ri-phone-line"></i></span>
                                    <input type="text" name="Phone" class="form-control" id="Phone" asp-for="Phone" placeholder="Teléfono" required>
                                    <div class="invalid-feedback">Por favor ingresa tu teléfono.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="ri-mail-line"></i></span>
                                    <input type="email" class="form-control" id="Email" name="Email" required asp-for="Email" placeholder="Correo electrónico">
                                    <div class="invalid-feedback">Por favor ingresa tu correo.</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-key"></i></span>
                                    <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" placeholder="Contraseña" required>
                                    <div class="invalid-feedback">Por favor ingresa tu contraseña.</div>
                                </div>
                            </div>

                            @if (ViewData["Message"] != null)
                            {
                                <div class="col-12">
                                    <p class="text-danger">@ViewData["Message"]</p>
                                </div>
                            }

                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Crear</button>
                            </div>

                            <div class="col-12">
                                <p class="small mb-0">¿Ya tienes cuenta? <a asp-controller="Account" asp-action="Login">Inicia sesión</a></p>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
