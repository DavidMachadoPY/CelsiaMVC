@model Celsia.ViewModels.UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                <div class="d-flex justify-content-center py-3">
                    <a asp-controller="Account" asp-action="Login" class="logo d-flex align-items-center w-auto">
                        <img src="https://expoindustrial.com.co/wp-content/uploads/2024/04/LOGO-CELSIA.png" alt="logo">
                    </a>
                </div>

                <div class="card mb-3 px-3 p-4">

                    <div class="card-body">

                        <div class="pt-2 pb-3 mb-4">
                            <h1 class="card-title text-center text-black pb-0 fs-3">Inicia Sesión</h1>
                        </div>

                        <form class="row g-3 needs-validation" novalidate asp-action="Login" method="post">

                            <div class="col-12 mb-2">
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="ri-mail-line"></i></span>
                                    <input type="email" class="form-control" id="Email" name="Email" required asp-for="Email" placeholder="Correo electrónico">
                                    <div class="invalid-feedback">Por favor ingresa tu correo.</div>
                                </div>
                            </div>

                            <div class="col-12 mb-2">
                                <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" placeholder="Contraseña" required>
                                <div class="invalid-feedback">Por favor ingresa tu contraseña.</div>
                            </div>

                            @if (ViewData["Message"] != null)
                            {
                                <div class="col-12">
                                    <p class="text-danger">@ViewData["Message"]</p>
                                </div>
                            }

                            <div class="col-12">
                                <button class="btn btn-outline-primary w-100" type="submit">Ingresar</button>
                            </div>


                            <div class="col-12">
                                <p class="small mb-0">¿Aún no tienes cuenta? <a asp-controller="Account" asp-action="Register">Crear</a></p>
                            </div>
                            <div class="col-12">
                                <p class="small mb-0"><a asp-controller="Account" asp-action="Register">¿Has olvidado tu contraseña?</a></p>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
